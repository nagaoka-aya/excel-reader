{
  "name": "excel-reader",
  "displayName": "excel-reader",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "excel-reader.excelToMarkdown",
        "title": "Markdownに変換する",
        "enablement": "filesExplorerFocus"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "excel-reader.excelToMarkdown",
          "when": "resourceExtname == .xlsx"
        }
      ]
    },
    "configuration": {
      "title": "Excel To Markdown",
      "properties": {
        "excelToMarkdown.scriptPath": {
          "type": "string",
          "default": "",
          "description": "Excel読み取り用のPowerShellスクリプト(.ps1)へのパス",
          "order": 1
        },
        "excelToMarkdown.ignoreSheets": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "表紙",
            "目次",
            "変更履歴",
            "データ"
          ],
          "description": "無視するシート名のリスト",
          "order": 2
        },
        "excelToMarkdown.outputFolder": {
          "type": "string",
          "default": "excelToMarkdown",
          "description": "処理結果の出力先フォルダパス",
          "order": 3
        },
        "excelToMarkdown.extendedPrompt": {
          "type": "string",
          "default": "",
          "description": "ExcelからMarkdownに変換する際の拡張プロンプト",
          "editPresentation": "multilineText",
          "order": 4
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}